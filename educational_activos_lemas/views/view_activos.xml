<odoo>
    <data>

        <record id="view_filter_activos" model="ir.ui.view">
            <field name="name">Busqueda de bienes</field>
            <field name="model">account.asset.asset</field>
            <field name="arch" type="xml">
                <search string="Busqueda distributivo">
                    <field name="code" string="Código de barra"/>
               </search>
            </field>
        </record>

        <record id="form_view_marcas" model="ir.ui.view">
        <field name="name">Form Marcas</field>
        <field name="model">account.asset.marcas</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image" widget='image' options='{"size": [150, 140]}'/>
                    </group>
                </sheet>
            </form>
        </field>
        </record>

         <record id="view_tree_activos" model="ir.ui.view">
             <field name="name">Bienes</field>
             <field name="model">account.asset.asset</field>
             <field name="type">tree</field>
             <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_purchase_tree"/>
             <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='name']" position="after">
                   <field name="code" string="Código de barra"/>
               </xpath>
               <xpath expr="/tree/field[@name='date']" position="after">
                   <field name="date" string="Fecha de adquisición"/>
               </xpath>
                 <xpath expr="/tree/field[@name='state']" position="after">
                   <field name="estado" string="Estado"/>
               </xpath>
            </field>
        </record>

        <record id="form_assets_inherit" model="ir.ui.view">
        <field name="name">Bienes</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group" position="before">
                <group col="4" name="basico">
                    <field name="marca"/>
                    <field name="custodio_actual"/>
                    <field name="serie"/>
                    <field name="custodio_anterior"/>
                    <field name="modelo"/>
                    <field name="ubicacion"/>
                </group>
            </xpath>

            <xpath expr="//group[@name='basico']" position="after">
                <group col="4">
                    <field name="estado"/>
                    <field name="observacion"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='date']" position="replace">
                <field name="date" string="Fecha de adquisición"/>
            </xpath>
            <xpath expr="//field[@name='first_depreciation_manual_date']" position="replace">
                <field name="first_depreciation_manual_date" string="Fecha primera depreciación"/>
            </xpath>
            <xpath expr="//field[@name='code']" position="replace">
                <field name="code" string="Código de Barras"/>
            </xpath>

            <xpath expr="/form/sheet/group[3]" position="after">
                <group>
                <field name="line_caracteristicas"> <!--context="{'default_carrera_id':carreras}">-->
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="descripcion"/>
                    </tree>
                </field>
                </group>
            </xpath>
        </field>
        </record>

            <menuitem name="Contabilidad" id="contabilidad_root_item"/>

            <menuitem name="Activos"
                  id="item_menu_activos_educa"
                  parent="contabilidad_root_item"
                  action="om_account_asset.action_account_asset_asset_form"/>

            <menuitem name="Informes"
                  id="item_menu_informes_contables"
                  parent="contabilidad_root_item"/>

            <menuitem name="Informe Activos"
                  id="item_menu_informes_activos"
                  parent="item_menu_informes_contables"
                  action="om_account_asset.action_asset_asset_report"/>

    </data>
</odoo>