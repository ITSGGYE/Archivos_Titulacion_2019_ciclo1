<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0DBDB"
    android:orientation="vertical"
    tools:context=".spiner">

    <LinearLayout
        android:id="@+id/cata"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#2E7D32"
            android:paddingLeft="45dp"
            app:srcCompat="@drawable/mesero" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#2E7D32"
            android:paddingTop="20dp"
            android:paddingRight="100dp"
            android:text="COMENTARIOS Y PRODUCTOS"
            android:textAlignment="gravity"
            android:textColor="#F34646"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="36dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/spProductos"
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_below="@+id/cata"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="7dp"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_below="@+id/spProductos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fecha:"
                android:inputType="datetime"
                android:textColorHint="#00695C"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etCedula"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:ems="10"
                android:hint="Numero de cedula"
                android:inputType="number"
                android:paddingTop="25dp"
                android:textColorHint="#00695C"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etCelular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/etCantidad"
                android:layout_marginBottom="2dp"
                android:ems="10"
                android:hint="celular:"
                android:inputType="number"
                android:textColorHint="#00695C"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="182dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:ems="10"
                android:hint="direccion:"
                android:inputType="textLongMessage"
                android:textColorHint="#00695C"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etNombrea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Enviar consulta  para eventos o pedidos:"
                android:inputType="textPersonName"
                android:textColorHint="#115A51"
                android:textSize="14sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btnAlmacenar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:background="#2E7D32"
            android:paddingTop="10dp"
            android:text="enviar"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/Text1"
            android:layout_width="220dp"
            android:layout_height="33dp"
            android:layout_below="@+id/imageView7"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            android:text="Facebook https://es-la.facebook.com/pages/category/Fast-Food-Restaurant/Las-Empanadas-de-Mam%C3%A1-Adita-1674190542803158/"
            android:textColor="#2E0E0E"
            android:textColorLink="#D0DBDB"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Al enviarnos tu opinion puede salir ganador de una adita gratis." />


    </LinearLayout>

</RelativeLayout>