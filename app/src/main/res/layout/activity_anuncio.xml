<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colortre"
    android:orientation="vertical"
    tools:context=".Anuncio">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_above="@+id/anuncio"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="125dp"
        android:gravity="center"
        android:text="Creacion de Anuncio"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/anuncio"
        android:layout_width="316dp"
        android:layout_height="239dp"
        android:layout_above="@+id/crearAnuncio"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="110dp"
        android:gravity="left"
        android:hint="Escriba su anuncio"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:text="" />

    <Button
        android:id="@+id/crearAnuncio"
        android:layout_width="256dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="106dp"
        android:background="@color/colordos"
        android:gravity="center"
        android:text="Crear"
        android:textColor="@color/coloruno" />
</RelativeLayout>